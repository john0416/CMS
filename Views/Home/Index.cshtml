@{
    ViewBag.Title = "Home Page";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                @*<h2>@ViewBag.Message</h2>*@
            </hgroup>
        </div>
        
    </section>
}
<style>
    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .button2 {
        background-color: white;
        color: black;
        border: 2px solid #555555;
    }
    .button2:hover {background-color: #555555;color: white;
    }


</style>

@if (TempData["Success"] != null)
{
    <script>alert("Abc");</script>
}
<div style="height: 300px">
@if (Request.IsAuthenticated)
{ 
    
    var str = User.Identity.Name;
    string[] words = str.Split('|');
    string role = words[1];
    
     
    if (role == "Admin")
    { 
        <div id="containerShipping">
            <button class="button button2"  onclick="location.href='@Url.Action("Index", "Admin")'">Departure Port</button>
            @*<button id="buttonBook" type="button" onclick="location.href='@Url.Action("BookShipment","Shipping")'">Book Shipment</button>
            <button id="buttonView" type="button" onclick="location.href='@Url.Action("ViewShipment","Shipping")'">View Shipment</button>*@
        </div>
    }
    else if (role == "ArrivalP")
    {
        <div id="containerShipping">
            <button class="button button2" onclick="location.href='@Url.Action("Index", "ArrivalPort")'">Notification</button>
        </div>
    }
    else
    {
        <div id="containerShipping">
            <button class="button button2" type="button" onclick="location.href='@Url.Action("BookShipment","Shipping")'">Book Shipment</button>
            <button class="button button2" type="button" onclick="location.href='@Url.Action("ViewShipment","Shipping")'">View Shipment</button>
        </div>
    }
}
else
{
    <div id="containerShipping">
        <button class="button button2" type="button" onclick="location.href='@Url.Action("BookShipment","Shipping")'">Book Shipment</button>
        <button class="button button2" type="button" onclick="location.href='@Url.Action("ViewShipment","Shipping")'">View Shipment</button>
    </div>
}
</div>
